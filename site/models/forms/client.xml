<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="editclient.form"
			addfieldpath="/administrator/components/com_chronos/models/fields">

		<field name="name"
				label="CHRONOS_FIELD_NAME"
				alias="name"
				required="true"
				filter="STRING"
				class="validate[required,custom[length255]]"
				validate="length255"
				type="cktext"/>

		<field name="alias"
				label="CHRONOS_FIELD_ALIAS"
				alias="alias"
				filter="STRING"
				class="validate[custom[length255]]"
				validate="length255"
				type="cktext"/>

		<field name="note"
				label="CHRONOS_FIELD_NOTE"
				alias="note"
				filter="RAW"
				type="ckeditor"/>
	</fieldset>
</form>